<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/b4" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/b2"
            app:layout_constraintTop_toBottomOf="@+id/b1" app:layout_constraintBottom_toTopOf="@+id/b7"
            android:textSize="70sp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/b7" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/b2"
            app:layout_constraintBottom_toBottomOf="@+id/b8" app:layout_constraintTop_toBottomOf="@+id/b4"
            android:textSize="70sp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/b8"
            app:layout_constraintEnd_toStartOf="@+id/b3"
            app:layout_constraintStart_toEndOf="@+id/b1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/b5"
            android:textSize="70sp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/winTV"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/b9" app:layout_constraintStart_toEndOf="@+id/b2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="@+id/b8" app:layout_constraintTop_toBottomOf="@+id/b6"
            android:textSize="70sp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/b5"
            app:layout_constraintEnd_toStartOf="@+id/b3"
            app:layout_constraintStart_toEndOf="@+id/b1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/b2" app:layout_constraintBottom_toTopOf="@+id/b8"
            android:textSize="70sp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/b6" app:layout_constraintStart_toEndOf="@+id/b2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toBottomOf="@+id/b3" app:layout_constraintBottom_toTopOf="@+id/b9"
            android:textSize="70sp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="@+id/b2"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/b1" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/b2" app:layout_constraintBottom_toTopOf="@+id/b4"
            android:textSize="70sp"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:id="@+id/b2"
            app:layout_constraintEnd_toStartOf="@+id/b3"
            app:layout_constraintStart_toEndOf="@+id/b1"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/b5" android:textSize="70sp" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/startB"/>
    <Button
            android:layout_width="0dp"
            android:layout_height="0dp" app:layout_constraintTop_toTopOf="@+id/b2"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/b3" app:layout_constraintStart_toEndOf="@+id/b2"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/b6"
            android:textSize="70sp"/>
    <Button
            android:text="Start New Game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/startB"
            app:layout_constraintHorizontal_bias="0.502" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="16dp" android:id="@+id/winTV" android:textSize="36sp"/>
</android.support.constraint.ConstraintLayout>